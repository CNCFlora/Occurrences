
    {{#role-validator}}
    <div id="validate-{{occurrenceID2}}" class="modal fade" role='dialog'>
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="{{base}}/occurrences/{{occurrenceID}}/validate">
                    <fieldset>
                        <input name="q" value="{{query}}" type="hidden" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3>{{strings.edit-validation}}</h3>
                        </div>
                        <div class='modal-body'>
                            <p class='form-group'>
                                <strong>{{strings.valid-taxonomy}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="taxonomy" type="radio" value="valid" {{#taxonomy-valid}} checked {{/taxonomy-valid}} /> 
                                    {{strings.yes}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="taxonomy" type="radio" value="invalid"  {{#taxonomy-invalid}} checked {{/taxonomy-invalid}} /> 
                                    {{strings.no}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="taxonomy" type="radio" value="unknown"  {{#taxonomy-unknown}} checked {{/taxonomy-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class='form-group'>
                                <strong>{{strings.valid-geo}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="georeference" type="radio" value="valid" {{#georeference-valid}} checked {{/georeference-valid}} /> 
                                    {{strings.yes}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="georeference" type="radio" value="invalid"  {{#georeference-invalid}} checked {{/georeference-invalid}} /> 
                                    {{strings.no}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="georeference" type="radio" value="unknown"  {{#georeference-unknown}} checked {{/georeference-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class='form-group' rel='valid'>
                                <strong>{{strings.valid-presence}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="presence" type="radio" value="present" {{#presence-present}} checked {{/presence-present}} /> 
                                    {{strings.yes}} ({{strings.present}})
                                </label>
                                <label class='radio-inline'>
                                    <input name="presence" type="radio" value="absent" {{#presence-absent}} checked {{/presence-absent}} /> 
                                    {{strings.no}} ({{strings.absent}})
                                </label>
                                <label class='radio-inline'>
                                    <input name="presence" type="radio" value="unknown" {{#presence-unknown}} checked {{/presence-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class='form-group' rel='valid'>
                                <strong>{{strings.valid-native}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="native" type="radio" value="native" {{#native-native}} checked {{/native-native}} /> 
                                    {{strings.yes}} ({{strings.native}})
                                </label>
                                <label class='radio-inline'>
                                    <input name="native" type="radio" value="non-native" {{#native-non-native}} checked {{/native-non-native}} /> 
                                    {{strings.no}} ({{strings.non-native}})
                                </label>
                                <label class='radio-inline'>
                                    <input name="native" type="radio" value="unknown" {{#native-unknown}} checked {{/native-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class='form-group' rel='valid'>
                                <strong>{{strings.valid-cultivated}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="cultivated" type="radio" value="yes" {{#cultivated-yes}} checked {{/cultivated-yes}} /> 
                                    {{strings.yes}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="cultivated" type="radio" value="no" {{#cultivated-no}} checked {{/cultivated-no}} /> 
                                    {{strings.no}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="cultivated" type="radio" value="unknown" {{#cultivated-unknown}} checked {{/cultivated-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class='form-group' rel='valid'>
                                <strong>{{strings.valid-duplicated}}</strong><br />
                                <label class='radio-inline'>
                                    <input name="duplicated" type="radio" value="yes" {{#duplicated-yes}} checked {{/duplicated-yes}} /> 
                                    {{strings.yes}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="duplicated" type="radio" value="no" {{#duplicated-no}} checked {{/duplicated-no}} /> 
                                    {{strings.no}}
                                </label>
                                <label class='radio-inline'>
                                    <input name="duplicated" type="radio" value="unknown" {{#duplicated-unknown}} checked {{/duplicated-unknown}} /> 
                                    {{strings.unknown}}
                                </label>
                            </p>
                            <p class="form-group">
                                <label for="comment">{{strings.valid-comments}}</label>
                                <textarea name="comment" class='form-control'>{{validation.remarks}}</textarea>
                            </p>
                        </div>
                        <div class='modal-footer'>
                            <button class="btn btn-success" type='submit'>{{strings.save}}</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {{/role-validator}}

    {{#role-analyst}}
    <div id="analysis-{{occurrenceID2}}" class="modal fade" role='dialog'>
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="{{base}}/occurrences/{{occurrenceID}}/analysis">
                    <fieldset>
                        <input name="q" value="{{query}}" type="hidden" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" >&times;</button>
                            <h3>{{strings.analysis}}</h3>
                        </div>
                        <div class="modal-body">
                            <p class="form-group">
                                <label for="qualifier">{{strings.qualifier}}</label>
                                <input id="identificationQualifier" name="identificationQualifier" type="text" class="form-control" value="{{identificationQualifier}}" />
                            </p>
                            <p class="form-group">
                                <label for="comments">{{strings.comment}}</label>
                                <textarea name="comments" class='form-control'>{{comments}}</textarea>
                            </p>
                        </div>
                        <div class='modal-footer'>
                            <button class="btn btn-success" type='submit'>{{strings.save}}</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {{/role-analyst}}

    {{#role-sig}}
    <div id="sig-{{occurrenceID2}}" class="modal fade" role='dialog'>
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="{{base}}/occurrences/{{occurrenceID}}/sig">
                    <fieldset>
                        <input name="q" value="{{query}}" type="hidden" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" >&times;</button>
                            <h3>{{strings.sig}}</h3>
                        </div>
                        <div class="modal-body">
                            <p class='form-group'>
                                <label for="status">{{strings.status-sig}}:</label>
                                <select name="status" class='form-control'>
                                    <option value="ok" {{#status-ok}} selected {{/status-ok}}>{{strings.ok}}</option>
                                    <option value="nok" {{#status-nok}} selected {{/status-nok}}>{{strings.not-ok}}</option>
                                    <option value="uncertain-locality" {{#status-uncertain-locality}} selected {{/status-uncertain-locality}}>{{strings.uncertain-locality}}</option>
                                </select>
                            </p>
                            <p class="form-group">
                                <label for="latitude">{{strings.latitude}}</label>
                                <input name="latitude" value="{{decimalLatitude}}" class='form-control' type="text" />
                            </p>
                            <p class="form-group">
                                <label for="longitude">{{strings.longitude}}</label>
                                <input name="longitude" value="{{decimalLongitude}}" class='form-control' type="text" />
                            </p>
                            <p class="form-group">
                                <label for="comment">{{strings.comment}}</label>
                                <textarea name="comment" class='form-control'>{{georeferenceRemarks}}</textarea>
                            </p>
                        </div>
                        <div class='modal-footer'>
                            <button class="btn btn-success" type='submit'>{{strings.save}}</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {{/role-sig}}
