
    {{#role-validator}}
    <div id="validate-{{occurrenceID2}}" class="modal fade" role='dialog'>
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="POST" action="{{base}}/occurrences/{{occurrenceID}}/validate">
                    <fieldset>
                        <input name="q" value="{{query}}" type="hidden" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3>Validação</h3>
                        </div>
                        <div class='modal-body'>
                            <p class='form-group'>
                                <label for="status">{{strings.valid}}:</label>
                                <select name="status" class='form-control'>
                                    <option value=""></option>
                                    <option value="valid" {{#valid}} selected {{/valid}}>{{strings.valid}}</option>
                                    <option value="invalid" {{#invalid}} selected {{/invalid}}>{{strings.invalid}}</option>
                                </select>
                                <script type="text/javascript">
                                {{#valid}} $("select[name=status]").val('valid') {{/valid}}
                                {{#invalid}} $("select[name=status]").val('invalid') {{/invalid}}
                                </script>
                            </p>
                            <p class='form-group' rel='both'>
                            <label for="reason"><span rel='invalid'>{{strings.reason}}</span><span rel='valid'>{{strings.addendun}}</span>:</label>
                                <select name="reason" class='form-control'>
                                    <option value="N/A">N/A</option>
                                    <option value="ok" rel='valid' {{#reason-ok}} selected {{/reason-ok}}>{{strings.data-is-ok}}</option>
                                    <option value="wrong georeference" rel='valid' {{#reason-wrong-georeference}} selected {{/reason-wrong-georeference}}>{{strings.wrong-georeference}}</option>
                                    <option value="uncertain taxonomy" rel='valid' {{#reason-uncertain-taxonomy}} selected {{/reason-uncertain-taxonomy}}>{{strings.uncertain-taxonomy}}</option>
                                    <option value="wrong taxonomy" rel='invalid' {{#reason-wrong-taxonomy}} selected {{/reason-wrong-taxonomy}}>{{strings.wrong-taxonomy}}</option>
                                    <option value="duplicate" rel='invalid' {{#reason-duplicate}} selected {{/reason-duplicate}}>{{strings.duplicated}}</option>
                                    <option value="cultivated" rel='invalid' {{#reason-cultivated}} selected {{/reason-cultivated}}>{{strings.cultivated}}</option>
                                    <option value="other" rel='invalid' {{#reason-other}} selected {{/reason-other}}>{{strings.other}}</option>
                                </select>
                            </p>
                            <p class='form-group' rel='valid'>
                                <label for="presence">{{strings.presence}}:</label>
                                <select name="presence" class='form-control'>
                                    <option value="unkown" {{#presence-unkown}} selected {{/presence-unkown}}>{{strings.unkown}}</option>
                                    <option value="present" {{#presence-present}} selected {{/presence-present}}>{{strings.present}}</option>
                                    <option value="absent" {{#presence-absent}} selected {{/presence-absent}}>{{strings.absent}}</option>
                                </select>
                            </p>
                            <p class="form-group">
                                <label for="comment">{{strings.comment}}:</label>
                                <textarea name="comment" class='form-control'>{{validation.remarks}}</textarea>
                            </p>
                        </div>
                        <div class='modal-footer'>
                            <button class="btn btn-success" type='submit'>{{strings.save}}</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    {{/role-validator}}

